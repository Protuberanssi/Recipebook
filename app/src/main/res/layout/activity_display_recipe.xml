<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view.DisplayRecipe">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:padding="10dp">

        <EditText
            android:hint="@string/recipeName"
            android:id="@+id/editTextRecipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="82dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editTextRecipe"
            android:layout_alignParentStart="true"
            android:text="@string/recipeName"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:hint="@string/ingredient"
            android:id="@+id/editTextIngredient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextRecipe"
            android:layout_marginStart="85dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:lines="8"
            android:minLines="2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editTextIngredient"
            android:layout_alignParentStart="true"
            android:text="@string/ingredient"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:hint="@string/instruction"
            android:id="@+id/editTextInstruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextIngredient"
            android:layout_marginStart="85dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:lines="8"
            android:minLines="2" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editTextInstruction"
            android:layout_alignParentStart="true"
            android:text="@string/instruction"
            android:textAppearance="?android:attr/textAppearanceMedium" />


        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editTextInstruction"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="28dp"
            android:onClick="run"
            android:text="@string/save" />


    </RelativeLayout>
</ScrollView>